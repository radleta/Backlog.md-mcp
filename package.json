{
	"name": "@radleta/backlog-md-mcp",
	"version": "0.1.3",
	"type": "module",
	"private": false,
	"description": "MCP (Model Context Protocol) server for Backlog.md task management - integrate Backlog.md with Claude Code",
	"keywords": [
		"mcp",
		"model-context-protocol",
		"backlog",
		"task-management",
		"claude",
		"claude-code",
		"ai-tools",
		"productivity",
		"kanban",
		"sprint-management"
	],
	"homepage": "https://github.com/radleta/Backlog.md-mcp#readme",
	"bugs": {
		"url": "https://github.com/radleta/Backlog.md-mcp/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/radleta/Backlog.md-mcp.git"
	},
	"license": "MIT",
	"author": {
		"name": "radleta",
		"url": "https://github.com/radleta"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"backlog-mcp": "./bin/backlog-mcp.js",
		"backlog-mcp-dev": "./bin/backlog-mcp-dev.js"
	},
	"files": [
		"dist/",
		"bin/",
		"README",
		"CHANGELOG.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsc && npm run copy-package-files",
		"build:watch": "tsc --watch",
		"copy-package-files": "node ./scripts/copy-files.js",
		"start": "node dist/server.js",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"lint": "eslint src/ --ext .ts",
		"lint:fix": "eslint src/ --ext .ts --fix",
		"format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
		"format:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist",
		"prebuild": "npm run clean",
		"validate": "npm run lint && npm run typecheck && npm run test",
		"prepublishOnly": "npm run validate && npm run build",
		"version": "node scripts/update-changelog.js $npm_package_version && git add CHANGELOG.md",
		"postversion": "git push && git push --tags",
		"pack:dry": "npm pack --dry-run",
		"size:check": "npm pack --dry-run 2>&1 | grep 'package size' | head -1",
		"release": "npm run pack:dry && npm run size:check && echo 'Ready for release. Run: npm version [patch|minor|major] to trigger CI/CD release'"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^0.6.0",
		"backlog.md": "^1.10.2",
		"chalk": "^4.1.2",
		"commander": "^12.0.0",
		"inquirer": "^8.2.6",
		"ora": "^5.4.1"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/inquirer": "^9.0.0",
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-security": "^1.7.0",
		"prettier": "^3.0.0",
		"typescript": "^5.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
